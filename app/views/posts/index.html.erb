<%= form_with(url: posts_path, method: :get, local: true) do |form| %>
    <%= form.text_field :search, placeholder: "Search posts by title" %>
    <%= form.submit "Search" %>
  <% end %>
  
  <% if @posts.any? %>
    <% @posts.each do |post| %>
      <div class="post">
        <h2><%= link_to post.title, post %></h2>
        <p><%= post.content %></p>
      </div>
    <% end %>
  <% else %>
    <p>No posts found.</p>
  <% end %>
  