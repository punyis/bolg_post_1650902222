<%= form_with(url: posts_path, method: :get, local: true) do |form| %>
  <div class="search-container">
    <%= form.text_field :search, placeholder: "Search posts by title", class: "search-input" %>
    <%= form.submit "Search", class: "search-btn" %>
  </div>
<% end %>

<% if @posts.any? %>
  <div class="posts-list">
    <% @posts.each do |post| %>
      <div class="post">
        <h2><%= link_to post.title, post %></h2>
        <p><%= post.content %></p>
      </div>
    <% end %>
  </div>
<% else %>
  <p>No posts found.</p>
<% end %>
